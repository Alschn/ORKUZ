{
  "name": "node-package",
  "version": "0.0.0",
  "description": "A Node.js package written for the purpose of the final paper",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint",
    "dev": "vite",
    "build": "tsup src/index.ts --format esm --dts --config tsup.config.ts",
    "vite:build": "tsc && vite build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci:publish": "pnpm build && pnpm publish -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.2.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.9.0",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  }
}
